<h2>Traders</h2>
<div class="row g-3">
  <% for (let trader of traders) { %>

  <div class="col-4">
    <div class="card p-1">
      <h5 class="card-title"><%= trader.name %></h5>
      <div class="card-text">
        <div><%= trader.state %></div>
        <div>Initial Account Balance: <%= trader.initial_account_balance %> </div>     
        <div>
          <a
            class="btn btn-outline-primary"
            href="<%= '/traders/' + trader.trader_id + '/edit' %>"
            >Edit</a
          >
          <a
            class="btn btn-outline-danger"
            href="<%= '/traders/' + trader.trader_id + '/delete' %>"
            >Delete</a
          >
        </div>
      </div>
    </div>
  </div>

  <% } %> <%- include("./pagination.ejs", { currentPage, lastPage }) %>
</div>
